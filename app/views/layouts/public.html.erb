<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS<%= " | #{@page_title}" if @page_title %></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>
  </head>
  <body>

    <div id="header">
      <h1>Shift Management</h1>
    </div>

    <div id="main">

      <div id="navigation">
        <%= render(:partial => 'layouts/navigation', :locals => { :team => @teams} ) %>
      </div>

      <div id="content">
        <%= yield %>
      </div>
      <div class="clear"></div>

    </div>

    <div id="footer">
    </div>

  </body>
</html>

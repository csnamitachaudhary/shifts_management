<% @page_title = "Delete Team" %>

<div class="teams delete">
  <h2>Delete Team</h2>

  <%= form_for(@team, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this Team?</p>

    <p class="reference-name"><%= f.object.name%></p>

    <div class="form-buttons">
      <%= f.submit("Delete Team") %>
    </div>

  <% end %>
</div>
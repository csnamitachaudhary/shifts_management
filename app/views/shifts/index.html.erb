<% @page_title = "All Shifts For this Member" %>

<div class="shifts index">
  <h2>Shifts</h2>

  <%= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %>
  <%= link_to("Add New Shift", new_shift_path(:member_id => @member.id), :class => 'action new') %>

  <table class="listing" summary="Shift list">
    <tr class="header">
      <th>Day</th>
      <th>Start Time</th>
      <th>End Time</th>
    </tr>
    <% @shifts.each do |shift| %>
    <tr>
      <td><%= shift.day.humanize %></td>
      <td><%= shift.start_time.strftime("%H:%M") %></td>
      <td><%= shift.end_time.strftime("%H:%M") %></td>
      <td class="actions">
        <%= link_to("Show",shift_path(shift), :class => 'action show') %>
        <%= link_to("Edit", edit_shift_path(shift), :class => 'action edit') %>
        <%= link_to('Delete', delete_shift_path(shift), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
